/* TeleCRM/gui/style/minimal_dark.qss */

/* ═══════════════════════════════════════════════════════════════════════════════════════════ */
/* 🎨 МИНИМАЛИСТИЧНЫЙ ТЕМНЫЙ СТИЛЬ - ЧЕРНО-БЕЛЫЕ ТОНА С СИНИМИ АКЦЕНТАМИ */
/* ═══════════════════════════════════════════════════════════════════════════════════════════ */

/* ────────────────────────────────────────────────────────────────────────────────────────── */
/* 🌟 ОСНОВНЫЕ СТИЛИ */
/* ────────────────────────────────────────────────────────────────────────────────────────── */

QWidget {
    background: transparent;
    color: #FFFFFF;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "SF Pro Display", Roboto, sans-serif;
    font-size: 14px;
    font-weight: 400;
    selection-background-color: rgba(59, 130, 246, 0.3);
    selection-color: #FFFFFF;
}

QMainWindow {
    background: #0A0A0A;
    border: none;
}

QWidget#AccountManagerTab {
    background: transparent;
}

/* ────────────────────────────────────────────────────────────────────────────────────────── */
/* 🎭 ЗАГОЛОВКИ И КОНТЕЙНЕРЫ */
/* ────────────────────────────────────────────────────────────────────────────────────────── */

QWidget#HeaderContainer {
    background: transparent;
    border: none;
    padding: 0;
    margin-bottom: 16px;
}

QLabel#MainTitle {
    font-size: 28px;
    font-weight: 700;
    color: #FFFFFF;
    letter-spacing: -0.02em;
    border: none;
    background: transparent;
    padding: 8px 0;
    margin: 0;
    text-align: center;
}

QWidget#StatsContainer {
    background: transparent;
    border: none;
    padding: 0;
    margin: 12px 0 20px 0;
}

QWidget#TableContainer {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    padding: 20px;
    margin: 0;
}

QWidget#PaginationContainer {
    background: transparent;
    border: none;
    padding: 8px 0;
}

/* ────────────────────────────────────────────────────────────────────────────────────────── */
/* 📊 СТАТИСТИЧЕСКИЕ КАРТОЧКИ */
/* ────────────────────────────────────────────────────────────────────────────────────────── */

QWidget#StatBox {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    margin: 0;
}

/* УБИРАЕМ HOVER-ЭФФЕКТ У СЧЕТЧИКОВ */
/* QWidget#StatBox:hover {
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(59, 130, 246, 0.3);
    transform: translateY(-1px);
} */

/* ────────────────────────────────────────────────────────────────────────────────────────── */
/* 🎯 КНОПКИ */
/* ────────────────────────────────────────────────────────────────────────────────────────── */

QPushButton#AddButton {
    background: #3B82F6;
    border: none;
    border-radius: 8px;
    color: #FFFFFF;
    font-size: 14px;
    font-weight: 500;
    padding: 0;
}

QPushButton#AddButton:hover {
    background: #2563EB;
}

QPushButton#AddButton:pressed {
    background: #1D4ED8;
}

QPushButton#PaginationButton {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: rgba(255, 255, 255, 0.8);
    font-size: 13px;
    font-weight: 500;
    padding: 0;
}

QPushButton#PaginationButton:hover {
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(59, 130, 246, 0.4);
    color: #FFFFFF;
}

QPushButton#PaginationButton:pressed {
    background: rgba(255, 255, 255, 0.12);
}

QPushButton#PaginationButton:disabled {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.04);
    color: rgba(255, 255, 255, 0.3);
}

/* ────────────────────────────────────────────────────────────────────────────────────────── */
/* 🎨 ДЕЙСТВИЯ В ТАБЛИЦЕ */
/* ────────────────────────────────────────────────────────────────────────────────────────── */

QWidget#ActionContainer {
    background: transparent;
    border: none;
    padding: 0;
}

QPushButton#ActionButton {
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 6px;
    color: rgba(255, 255, 255, 0.9);
    font-size: 13px;
    font-weight: 500;
    padding: 0;
}

QPushButton#ActionButton:hover {
    background: rgba(255, 255, 255, 0.12);
    border: 1px solid rgba(59, 130, 246, 0.5);
    color: #FFFFFF;
}

QPushButton#ActionButton:pressed {
    background: rgba(255, 255, 255, 0.18);
}

/* ────────────────────────────────────────────────────────────────────────────────────────── */
/* 📋 ТАБЛИЦА */
/* ────────────────────────────────────────────────────────────────────────────────────────── */

QTableWidget#ModernTable {
    background: transparent;
    border: none;
    border-radius: 8px;
    gridline-color: transparent;
    selection-background-color: rgba(59, 130, 246, 0.1);
    alternate-background-color: rgba(255, 255, 255, 0.02);
    font-size: 13px;
    outline: none;
}

QTableWidget#ModernTable::item {
    border: none;
    padding: 15px 10px;  /* Больше отступов для высоких строк */
    color: rgba(255, 255, 255, 0.9);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

QTableWidget#ModernTable::item:selected {
    background: rgba(59, 130, 246, 0.15);
    color: #FFFFFF;
}

QTableWidget#ModernTable::item:hover {
    background: rgba(255, 255, 255, 0.04);
}

QHeaderView::section {
    background: rgba(255, 255, 255, 0.04);
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding: 12px;  /* Увеличили отступы заголовков */
    font-weight: 600;
    font-size: 13px;
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

QHeaderView::section:hover {
    background: rgba(255, 255, 255, 0.06);
}

QHeaderView::section:first {
    border-top-left-radius: 8px;
}

QHeaderView::section:last {
    border-top-right-radius: 8px;
}

/* ────────────────────────────────────────────────────────────────────────────────────────── */
/* 🎚️ СКРОЛЛБАРЫ */
/* ────────────────────────────────────────────────────────────────────────────────────────── */

QScrollBar:vertical {
    background: transparent;
    width: 8px;
    border-radius: 4px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background: rgba(59, 130, 246, 0.6);
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
    background: transparent;
}

QScrollBar:horizontal {
    background: transparent;
    height: 8px;
    border-radius: 4px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background: rgba(59, 130, 246, 0.6);
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
    background: transparent;
}

/* ────────────────────────────────────────────────────────────────────────────────────────── */
/* 🎭 ТАБЫ */
/* ────────────────────────────────────────────────────────────────────────────────────────── */

QTabWidget#MainTabs::pane {
    border: none;
    background: transparent;
    top: -1px;
}

QTabWidget#MainTabs::tab-bar {
    alignment: left;
}

QTabBar::tab {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-bottom: none;
    padding: 10px 20px;
    margin: 0 2px;
    border-radius: 8px 8px 0 0;
    color: rgba(255, 255, 255, 0.7);
    font-size: 13px;
    font-weight: 500;
}

QTabBar::tab:selected {
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.3);
    color: #FFFFFF;
    font-weight: 600;
}

QTabBar::tab:hover:!selected {
    background: rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.9);
}

/* ────────────────────────────────────────────────────────────────────────────────────────── */
/* 🎨 ДОПОЛНИТЕЛЬНЫЕ ЭЛЕМЕНТЫ */
/* ────────────────────────────────────────────────────────────────────────────────────────── */

QLabel#PaginationInfo {
    color: rgba(255, 255, 255, 0.6);
    font-size: 13px;
    background: transparent;
    border: none;
}

QLabel#PageLabel {
    color: rgba(255, 255, 255, 0.8);
    font-size: 13px;
    font-weight: 500;
    padding: 0 16px;
    background: transparent;
    border: none;
}

/* ────────────────────────────────────────────────────────────────────────────────────────── */
/* ✨ ПЛАВНЫЕ ПЕРЕХОДЫ */
/* ────────────────────────────────────────────────────────────────────────────────────────── */

* {
    outline: none;
}

QPushButton, QWidget#StatBox {
    /* Убираем transition - не поддерживается в Qt */
}

QTableWidget::item {
    /* Убираем transition - не поддерживается в Qt */
}

QHeaderView::section {
    /* Убираем transition - не поддерживается в Qt */
}

/* ────────────────────────────────────────────────────────────────────────────────────────── */
/* 🌈 КАСТОМНЫЕ АНИМАЦИИ */
/* ────────────────────────────────────────────────────────────────────────────────────────── */

QWidget#StatBox {
    animation-duration: 0.2s;
    animation-timing-function: cubic-bezier(0.4, 0.0, 0.2, 1);
}

QPushButton {
    animation-duration: 0.15s;
    animation-timing-function: cubic-bezier(0.4, 0.0, 0.2, 1);
}